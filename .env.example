# Supabase (Optional - if using Supabase features)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Allowed hosts for VITE
VITE_HOSTS=http://localhost:5173,http://localhost:3000,https://your-frontend.vercel.app

# Database URLs (Required)
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"
DIRECT_URL="postgresql://user:password@host/database?sslmode=require"

# JWT Secrets (Required)
JWT_ACCESS_SECRET="your-super-secret-access-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_ACCESS_EXPIRATION="24h"
JWT_REFRESH_EXPIRATION="7d"

# CORS Configuration (Required)
CORS_ORIGIN="http://localhost:5173,https://your-frontend.vercel.app"

# Server Port (Optional - Vercel handles this)
PORT=3000
NODE_ENV=development
